package escola;

public class Aluno {
private String nome;
private double nota1;
private double nota2;
private responsavel responsavel1;


public responsavel getResponsavel1() {
	return responsavel1;
}
public void setResponsavel1(responsavel responsavel1) {
	this.responsavel1 = responsavel1;
}
public String getNome() {
	if (getNome().length() <=30)
		return nome;
	else
		System.out.println("O nome deve conter até 30 caracteres.");
	
}
public void setNome(String nome) {
	this.nome = nome;
}
public double getNota1() {
	return nota1;
}
public void setNota1(double nota1) {
	this.nota1 = nota1;
}
public double getNota2() {
	return nota2;
}
public void setNota2(double nota2) {
	this.nota2 = nota2;
}


}
